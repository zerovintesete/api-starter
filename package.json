{
  "name": "api-starter",
  "version": "0.0.1",
  "description": "Starter to a beautiful API :)",
  "main": "app.js",
  "scripts": {
    "dev": "nodemon app.js",
    "start": "node app.js",
    "commitmsg": "validate-commit-msg",
    "release": "bash release.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucastafarelbs/api-start.git"
  },
  "keywords": [
    "api",
    "starter",
    "restify",
    "nodejs",
    "js",
    "javascript"
  ],
  "author": "lucastafarelbs.tech",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lucastafarelbs/api-start/issues"
  },
  "homepage": "https://github.com/lucastafarelbs/api-start#readme",
  "devDependencies": {
    "nodemon": "^1.14.7",
    "conventional-changelog": "^1.1.7",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "ci",
        "build"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": ""
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "dotenv": "^4.0.0",
    "filter-files": "^0.4.0",
    "is-directory": "^0.3.1",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "mongoose": "^5.0.0-rc2",
    "restify": "^6.3.4",
    "table": "^4.0.2"
  }
}
